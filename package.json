{
  "name": "portfolio",
  "version": "1.0.0",
  "description": "Raul Escobedo's Portfolio",
  "main": "index.html",
  "scripts": {
    "build": "npm run clean && npm run imagemin && npm run copyfonts && npm run usemin",
    "clean": "rimraf dist",
    "copyfonts": "copyfiles -f node_modules/font-awesome/fonts/* dist/fonts",
    "imagemin": "imagemin img/* -o dist/img",
    "lite": "lite-server",
    "start": "npm run watch:all",
    "test": "echo \"Error: no test specified\" && exit 1",
    "watch:all": "parallelshell 'npm run lite'",
    "uglify-js": "git+https://github.com/mishoo/UglifyJS2.git#harmony",
    "usemin": "usemin myportfolio.html -d dist --htmlmin -o dist/myportfolio.html && usemin thetrainer.html -d dist --htmlmin -o dist/thetrainer.html && usemin index.html -d dist --htmlmin -o dist/index.html"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/rjescobedo/raulescobedo-portfolio.git"
  },
  "author": "Raul Escobedo",
  "license": "ISC",
  "bugs": {
    "url": "https://github.com/rjescobedo/raulescobedo-portfolio/issues"
  },
  "homepage": "https://github.com/rjescobedo/raulescobedo-portfolio#readme",
  "devDependencies": {
    "copyfiles": "^2.2.0",
    "imagemin-cli": "^5.1.0",
    "lite-server": "^2.6.1",
    "onchange": "^7.0.0",
    "parallelshell": "3.0.1",
    "rimraf": "^3.0.2",
    "usemin-cli": "^0.6.0"
  },
  "dependencies": {
    "uglify-js": "github:mishoo/UglifyJS2#harmony"
  }
}
